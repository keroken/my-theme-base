{
  "plugins": ["@prettier/plugin-php"],
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "printWidth": 80,
  "endOfLine": "lf",
  "phpVersion": "7.4",
  "braceStyle": "1tbs",
  "overrides": [
    {
      "files": "*.php",
      "options": {
        "phpVersion": "7.4",
        "trailingCommaPHP": true,
        "braceStyle": "1tbs"
      }
    },
    {
      "files": "*.css",
      "options": {
        "singleQuote": false
      }
    }
  ]
}
