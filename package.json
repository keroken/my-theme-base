{
  "name": "my-theme-base",
  "version": "1.0.0",
  "description": "WordPress theme with Prettier code formatting",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:php": "prettier --write '**/*.php'",
    "format:css": "prettier --write '**/*.css'",
    "format:js": "prettier --write '**/*.js'"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "@prettier/plugin-php": "^0.22.2"
  },
  "private": true
}
